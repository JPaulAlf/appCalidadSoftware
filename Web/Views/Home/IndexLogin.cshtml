@model Infraestructure.Models.Usuario

@{
    ViewData["Title"] = "Inicio Sesion";
}

  @using (Html.BeginForm("Inicio_Sesion", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h1 style="text-align:center;">Inicio de Sesión </h1>
    <div class="content">
        <div class="input-field">
           @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", placeholder="Usuario electrónico" } })
        </div>
        <div class="input-field">
           @Html.EditorFor(model => model.contrasenna, new { htmlAttributes = new { @class = "form-control" , type = "password", autocomplete="nope", placeholder="Contraseña"} })
        </div>
    </div>
    <div class="action">
        <button type="submit">Ingresar</button>
    </div>
}
