@model LNegocio.Factura

@{ 
    int cont = 0;
    foreach (LNegocio.Articulo art in Model.Articulos)
    {
        if (art.Cantidad > 0)
        {
            cont++;
        }
    }
}



@if (cont>=3 && Model.MontoSub >=10000) {
<label>Descuento:</label>
<div class="form-group col-md-6">
    @Html.EditorFor(model => model.Desc, new
{
    htmlAttributes = new
    {
        @class = "form-control",
        type = "number",
        id = "Descuento",
        placeholder = "Descuento"
    }
})


</div>
<div>
    <button onclick="AplicarDescuento()" type="button"
            class="btn btn-success">
        Aplicar Descuento
    </button>
</div>
}
